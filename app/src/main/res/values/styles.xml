<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ToBApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/bg_white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimationStyle</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/bg_white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
       <item name="android:windowBackground">@drawable/layer_launcher</item>
        <!--<item name="android:activityCloseEnterAnimation">@anim/dialog_slide_in_bottom</item>
       <item name="android:activityCloseExitAnimation">@anim/dialog_slide_out_bottom</item>
       <item name="android:activityOpenEnterAnimation">@anim/dialog_slide_in_bottom</item>
       <item name="android:activityOpenExitAnimation">@anim/dialog_slide_out_bottom</item>-->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.ToBApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>